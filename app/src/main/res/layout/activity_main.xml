<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The first child in the layout is for the main Activity UI-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/vancouver_night">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="40dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="0.01"
            android:capitalize="words"
            android:id="@+id/textView"
            android:layout_below="@+id/imageViewNearBy"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageView" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewNearBy"
            android:src="@drawable/glyphicons_735_nearby_circle_white"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingTop="30dp"
            android:paddingBottom="10dp" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:baselineAligned="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_centerHorizontal="true"
            android:layout_alignParentRight="false"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_alignParentEnd="false"
            android:id="@+id/main_categories_layout"
            android:layout_gravity="center"
            android:rowCount="5"
            android:columnCount="3"
            android:orientation="vertical">

            <ImageButton
                android:backgroundTint="#71d300"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:src="@drawable/glyphicons_497_stay"
                android:background="@drawable/round_button"
                android:scaleType="centerInside"
                android:layout_row="0"
                android:layout_column="0"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp" />

            <ImageButton
                android:backgroundTint="#0eaee1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton4"
                android:src="@drawable/glyphicons_503_explore"
                android:background="@drawable/round_button"
                android:scaleType="centerInside"
                android:layout_gravity="top"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp" />

            <ImageButton
                android:backgroundTint="#db3424"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton3"
                android:src="@drawable/glyphicons_476_eat"
                android:background="@drawable/round_button"
                android:scaleType="centerInside"
                android:baselineAlignBottom="false"
                android:adjustViewBounds="false"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Stay"
                android:id="@+id/textViewStay"
                android:layout_row="3"
                android:layout_column="0"
                android:gravity="top"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Eat"
                android:id="@+id/textViewEat"
                android:layout_row="3"
                android:layout_column="1"
                android:gravity="top"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Explore"
                android:id="@+id/textViewExplore"
                android:layout_row="3"
                android:layout_column="2"
                android:gravity="top"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:textStyle="bold" />

        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="15"
            android:id="@+id/textViewTemperature"
            android:layout_marginTop="51dp"
            android:textSize="100dp"
            android:typeface="sans"
            android:layout_below="@+id/main_categories_layout"
            android:layout_centerHorizontal="true"
            style="@style/TextShadow"/>


    </RelativeLayout>

    <!-- Side navigation drawer UI -->
    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"/>

</android.support.v4.widget.DrawerLayout>